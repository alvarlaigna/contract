contract owned {
    address public centralBank;

    function owned() {
        centralBank = msg.sender;
    }

    modifier onlyOwner {
        if (msg.sender != centralBank) throw;
        _
    }

    function transferOwnership(address newOwner) 
        onlyOwner
    {
        centralBank = newOwner;
    }
}

